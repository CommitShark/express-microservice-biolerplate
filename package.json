{
  "name": "express-microservice-biolerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start": "export NODE_ENV=production && ts-node ./dist/server.js",
    "dev": "export NODE_ENV=development && nodemon --exec ts-node ./src/server.ts",
    "test": "export NODE_ENV=test && jest --detectOpenHandles --runInBand --force-exit",
    "typeorm": "npx typeorm-ts-node-commonjs --dataSource ./src/database/dataSource.ts",
    "typeorm:migrate": "npm run typeorm -- migration:run",
    "typeorm:generate": "npm run typeorm -- migration:generate ./src/database/migrations/migration",
    "typeorm:revert": "npm run typeorm -- migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dapr/dapr": "^3.4.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-useragent": "^1.0.15",
    "express-validator": "^7.2.0",
    "http-status": "1.7.4",
    "logform": "^2.6.1",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/express-useragent": "^1.0.5",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
